<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MeishiNewActivity" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtMeishiTitle"
        android:layout_alignParentTop="true"
        android:text="新規名刺"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
            android:id="@+id/edtMeishiTitle"
            android:textSize="18sp"
            android:background="#606060"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:text="MEISHI TITLE"
        />
        <EditText
            android:id="@+id/edtMeishiCompany"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtMeishiTitle"
            android:text="MEISHI COMPANY"
        />
        <EditText
            android:id="@+id/edtMeishiName"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtMeishiCompany"
            android:text="MEISHI NAME"
        />
        <EditText
            android:id="@+id/edtMeishiAddress"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtMeishiName"
            android:text="MEISHI ADDR"
        />
        <EditText
            android:id="@+id/edtMeishiTel"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtMeishiAddress"
            android:text="MEISHI TEL"
        />
        <EditText
            android:id="@+id/edtMeishiEmail"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtMeishiTel"
            android:text="MEISHI EMAIL"
        />
    <TextView
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/txtJSON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtMsg"
        android:layout_alignLeft="@+id/edtMeishiEmail"
        android:layout_alignRight="@+id/edtMeishiEmail"
        android:text="TextView" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMeishiEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Save" 
        android:onClick="onClickSave" />

</RelativeLayout>
