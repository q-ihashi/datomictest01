<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtMeishiTitle"
            android:textSize="14sp"
            android:background="#606060"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MEISHI TITLE"
        >
        </TextView>
        <TextView
            android:id="@+id/txtMeishiCompany"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MEISHI COMPANY"
        >
        </TextView>
        <TextView
            android:id="@+id/txtMeishiName"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MEISHI NAME"
        >
        </TextView>
        <TextView
            android:id="@+id/txtMeishiAddress"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MEISHI ADDR"
        >
        </TextView>
        <TextView
            android:id="@+id/txtMeishiTel"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MEISHI TEL"
        >
        </TextView>
        <TextView
            android:id="@+id/txtMeishiEmail"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MEISHI EMAIL"
        >
        </TextView>
        </LinearLayout>
</LinearLayout>
